@model SportData.Web.Models.Admin.CompetitionViewModel
@{
    ViewBag.Title = "Редакция на състезание";
}

<div class="row" Id="test">
    @Html.Partial("_AdminList")
    <div class="col-lg-8 col-md-8 col-sm-7">
        @using (Html.BeginForm("EditCompetition", "Admin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <fieldset>
                @Html.ValidationSummary(true)
                @Html.HiddenFor(x => x.Id)
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Наименование" } })
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputImageUrl" class="col-lg-2 control-label">Иконка</label>
                    <div class="col-lg-10">
                        <input type="url" class="form-control" id="inputImageUrl" placeholder="Линк">
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.IsActive, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10 checkbox">
                        @Html.CheckBoxFor(x => x.IsActive, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <label for="location" class="col-lg-2 control-label">Локация</label>
                    <div class="col-lg-10">
                        @Html.DropDownListFor(m => m.LocationId, new SelectList(ViewBag.Locations, "Value", "Text"), new { @class = "form-control", @id = "location" })
                    </div>
                </div>
                @Html.ActionLink("Нов", "AddCompetitionCulture", "Admin", new { competitionId = Model.Id }, new { @class = "btn btn-primary btn-sm" })
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>Име</th>
                            <th>Език</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Cultures)
                        {
                            <tr>
                                @Html.HiddenFor(m => item.CompetitionId)
                                <td>@item.CompetitionName</td>
                                <td>@item.CultureName</td>
                                <td>@Html.ActionLink("Редакция", "EditCompetitionCulture", "Admin", new { competitionId = @item.CompetitionId, cultureId = @item.CultureId }, new { @class = "" }) </td>
                                <td>
                                    <a id="deleteItem" class="deleteItem" data-target="#basic" data-toggle="modal" data-first-id="@item.CompetitionId" data-first-name="competitionId" data-second-id="@item.CultureId" data-second-name="cultureId" href="#" controller-name="Admin" action-name="DeleteCompetitionCulture">Изтрий</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="reset" class="btn btn-default">Изчисти</button>
                        <button type="submit" class="btn btn-primary">Запази</button>
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>
@Html.Partial("ModalConfirmationDialog")


