@using SportData.Web.Helpers
@model IEnumerable<SportData.Web.Models.Admin.FootballTeamViewModel>

@{
    ViewBag.Title = "Футболни отбори";
}

<div class="row" Id="test">
    @Html.Partial("_AdminList")
    <div class="col-lg-8 col-md-8 col-sm-7">
        @Html.ActionLink("Нов запис", "AddFootballTeam", "Admin", new { @class = "btn btn-default btn-sm" })
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Име</th>
                    <th>Локация</th>
                    <th>Емблема</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @Html.HiddenFor(m => item.Id)
                        <td>@item.Name</td>
                        <td>@item.LocationName</td>
                        <td>@Html.Image(item.EmblemImageUrl, "Няма иконка", new { @class = "", @width = "15", @height = "15" })</td>
                        <td>@Html.ActionLink("Редакция", "EditFootballTeam", "Admin", new { footballTeamId = @item.Id }, new { @class = "" }) </td>
                        <td>@Html.ActionLink("Изтрий", "DeleteFootballTeam", "Admin", new { footballTeamId = @item.Id }, new { @class = "" }) </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
