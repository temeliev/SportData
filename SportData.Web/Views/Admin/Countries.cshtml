@using System.Activities.Statements
@model IEnumerable<SportData.Web.Models.Admin.CountryViewModel>

@{
    ViewBag.Title = "Countries";
}

<div class="row" Id="test">
    @Html.Partial("_AdminList")
    <div class="col-lg-8 col-md-8 col-sm-7">
        @Html.ActionLink("Нов", "AddCountry", "Admin", new { @class = "btn btn-success" })
        <table class="table table-striped table-hover ">
            <thead>
            <tr>
                <th>Име</th>
                <th>Локация</th>
                <th>Език</th>
                <th>Съкращение</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CountryName</td>
                    <td>@item.LocationName</td>
                    <td>@item.CultureName</td>
                    <td>@item.Abbreviation</td>
                    <td>@Html.ActionLink("Редакция", "AddCountry", "Admin", new {@class = "btn btn-warning" }) </td>
                    <td>@Html.ActionLink("Изтрий", "DeleteCountry", "Admin", new {@class = "btn btn-danger"}) </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>


