@using SportData.Web.Helpers
@model SportData.Web.Models.Admin.CountryViewModel
@{
    ViewBag.Title = "Изтриване на държава";
}

<div class="row" Id="test">
    @Html.Partial("_AdminList")
    <div class="col-lg-8 col-md-8 col-sm-7">
        @using (Html.BeginForm("DeleteCountry", "Admin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <fieldset>
                @Html.ValidationSummary(true)
                @Html.HiddenFor(x => x.Id)
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LocationImageUrl, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(x => x.LocationImageUrl, new { @class = "form-control", @readonly = "readonly", @type = "url" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.LocationImageUrl, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.Image(@Model.LocationImageUrl, "Няма иконка", new { @class = "", @width = "50", @height = "50" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Abbreviation, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(x => x.Abbreviation, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ParentId, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(x => x.LocationName, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>Име</th>
                            <th>Език</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Cultures)
                        {
                            <tr>
                                @Html.HiddenFor(m => item.CountryId)
                                <td>@item.CountryName</td>
                                <td>@item.CultureName</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <a href=@Model.PreviousLink class="btn btn-default">Назад</a>
                        <button type="submit" class="btn btn-danger">Изтрий</button>
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>


