@using SportData.Web.Helpers
@model SportData.Web.Models.Admin.CompetitionViewModel
@{
    ViewBag.Title = "Изтриване на състезание";
}
<div class="row" Id="top">
    @Html.Partial("_AdminList")
    <div class="col-lg-8 col-md-8 col-sm-7">
        @using (Html.BeginForm("DeleteCompetition", "Admin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <fieldset>
                @Html.ValidationSummary(true)
                @Html.HiddenFor(x => x.Id)
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CompetitionImageUrl, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.Image(@Model.CompetitionImageUrl, "Няма иконка", new { @class = "", @width = "50", @height = "50" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LocationName, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(x => x.LocationName, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CompetitionTypeName, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(x => x.CompetitionTypeName, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-6 col-md-6 col-sm-4">
                        <div class="panel panel-default ">
                            <div class="panel-heading">
                                <h3 class="panel-title">Превод</h3>
                            </div>
                            <table class="table table-striped table-hover ">
                                <thead>
                                    <tr>
                                        <th>Име</th>
                                        <th>Език</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Cultures)
                                    {
                                        <tr>
                                            @Html.HiddenFor(m => item.CompetitionId)
                                            <td class="col-lg-9 table-col-left">@item.CompetitionName</td>
                                            <td class="table-col-left">@item.CultureName</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <a href=@Model.PreviousLink class="btn btn-default">Назад</a>
                        <button type="submit" class="btn btn-danger">Изтрий</button>
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>
