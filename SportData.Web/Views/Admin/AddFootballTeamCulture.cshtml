@model SportData.Web.Models.Admin.FootballTeamCultureViewModel
@{
    ViewBag.Title = "Добави език";
}

<div class="row" Id="test">
    @Html.Partial("_AdminList")
    <div class="col-lg-8 col-md-8 col-sm-7">
        @using (Html.BeginForm("AddFootballTeamCulture", "Admin", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <fieldset>
                @Html.ValidationSummary(true)
                @Html.HiddenFor(x => x.FootballTeamId)
                <div class="form-group">
                    @Html.LabelFor(m => m.FootballTeamName, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.EditorFor(x => x.FootballTeamName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Име" } })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CultureName, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.DropDownListFor(m => m.CultureId, new SelectList(ViewBag.Cultures, "Value", "Text"), "  ----- Избери -----  ", new { @class = "form-control", @id = "culture" })
                        @Html.ValidationMessageFor(x => x.CultureId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <a href=@Model.PreviousLink class="btn btn-default">Назад</a>
                        <button type="submit" class="btn btn-primary">Запази</button>
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>


